<%- include('partials/header.ejs') %>

    <%- include('partials/navbar.ejs') %>

        <style>
            .small-image {
                width: 150px;
                height: auto;
            }
        </style>

        <div class="container">
            <div class="image-container">
                <% if(data.img) { %>
                    <img src="<%= data.img %>" alt="<%= data.title %>" class="small-image">
                    <% } %>
            </div>
            <h1>
                <%= data.title %>
            </h1>
            <br>
            <h4>
                <%= data.description %>
            </h4>
            <br>
            <h4>Followers: <%= data.followers %>
            </h4>
            <hr>

            <% for(let post of data.posts) { %>
                <article>
                    <p>
                        <%= post.title %> - <%= post.author %>
                    </p>
                </article>
                <% } %>
        </div>

        <%- include('partials/footer.ejs') %>